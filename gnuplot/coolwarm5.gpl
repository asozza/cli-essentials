set terminal pngcairo size 1000,100
set output "coolwarm_palette.png"

set margins 0,0,0,0  # Imposta tutti i margini a 0
set lmargin at screen 0
set rmargin at screen 1
set bmargin at screen 0
set tmargin at screen 1

set xrange [-1:1]
set yrange [0:1]
set palette defined (-1 'blue', -0.5 "web-blue", 0 'white', 0.5 "goldenrod", 1 "red")

unset key
unset border
unset colorbox
unset xtics
unset ytics
set cbra[-1:1]

set view map
set pm3d map
splot x lt palette
